<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="work_logger_wizard" model="ir.ui.view">
            <field name="name">work_logger_wizard</field>
            <field name="model">hr_timesheet.work.logger</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group string="Project and Task">
                            <field name="display_task" invisible="1"/>
                            <field name="display_product" invisible="1"/>
                            <field name="task_id" attrs="{'invisible':[('display_task','=',False)]}"/>
                            <field name="analytic_account_id"/>
                        </group>
                        <group string="Time and Date">
                            <field name="date_started"/>
                            <field name="time_spent"/>
                        </group>
                        <group string="What did you do?">
                            <field name="product_id" attrs="{'invisible':[('display_product','=',False)]}"/>
                        </group>
                        <field name="description" nolabel="1" placeholder="Description"/>
                    </group>
                <footer>
                    <button class="btn-primary" type="object"
                            name="submit_log_work" string="Log Work"/>
                    <button class="btn-default" special="cancel" string="Cancel"/>
                </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
